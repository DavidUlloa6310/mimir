---
import Layout from '../layouts/Layout.astro';
import AuthModal from '../components/AuthModal.astro';
import '@/styles/globals.css'
---

<Layout title="Welcome to My App">
	<main class="container mx-auto p-4">
		<h1 class="text-4xl font-bold mb-8">Welcome to My App</h1>
		<p class="mb-4">This is a simple demonstration of our authentication modal.</p>
		<AuthModal />
	</main>
</Layout>

<style>
	main {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 100vh;
		text-align: center;
	}
</style>